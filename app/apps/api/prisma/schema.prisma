datasource db {
  provider = "sqlite"
}
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat    = "cjs"
}

 generator seeding {
  provider = "prisma-client-js"
  seed     = "prisma/seed.ts"
}

